<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeList"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#EEEEEE">

    <ImageView
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:id="@+id/ivChampion"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/aatroxsquare" />

    <com.jt.getdunked.RoboLightTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RANKED SOLO 5V5"
        android:id="@+id/tv_mode"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:layout_below="@+id/tv_result"
        android:layout_alignLeft="@+id/tv_kda"
        android:layout_alignStart="@+id/tv_kda" />

    <com.jt.getdunked.RoboLightTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEFEAT"
        android:id="@+id/tv_result"
        android:textColor="#cc0000"
        android:layout_alignTop="@+id/ivChampion"
        android:layout_toRightOf="@+id/ivChampion"
        android:layout_marginLeft="8dp"
        android:textSize="18sp"
        android:layout_marginTop="-2dp" />

    <com.jt.getdunked.RoboLightTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5 / 6 / 13"
        android:id="@+id/tv_kda"
        android:layout_below="@+id/tv_mode"
        android:layout_alignLeft="@+id/tv_result"
        android:layout_alignStart="@+id/tv_result" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/iv_item_3"
        android:src="@drawable/trinity_force_item"
        android:layout_above="@+id/iv_item_6"
        android:layout_alignLeft="@+id/iv_item_6"
        android:layout_alignStart="@+id/iv_item_6"
        android:layout_marginBottom="4dp" />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/iv_item_2"
        android:src="@drawable/infinity_edge_item"
        android:layout_alignTop="@+id/iv_item_3"
        android:layout_toLeftOf="@+id/iv_item_3"
        android:layout_marginRight="4dp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/iv_item_1"
        android:src="@drawable/berserkers_greaves_captain_item"
        android:layout_alignTop="@+id/iv_item_2"
        android:layout_toLeftOf="@+id/iv_item_2"
        android:layout_marginRight="4dp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/iv_item_6"
        android:src="@drawable/blade_of_the_ruined_king_item"
        android:layout_alignBottom="@+id/ivChampion"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="0dp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/iv_item_5"
        android:layout_alignTop="@+id/iv_item_6"
        android:layout_toLeftOf="@+id/iv_item_6"
        android:layout_marginRight="4dp"
        android:src="@drawable/last_whisper_item" />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/iv_item_4"
        android:layout_alignTop="@+id/iv_item_5"
        android:layout_toLeftOf="@+id/iv_item_5"
        android:layout_marginRight="4dp"
        android:src="@drawable/phantom_dancer_item" />

    <ImageView
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:id="@+id/iv_summoner_1"
        android:layout_alignBottom="@+id/ivChampion"
        android:layout_alignLeft="@+id/tv_kda"
        android:layout_alignStart="@+id/tv_kda"
        android:src="@drawable/flash" />

    <ImageView
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:id="@+id/iv_summoner_2"
        android:src="@drawable/flash"
        android:layout_alignTop="@+id/iv_summoner_1"
        android:layout_toRightOf="@+id/iv_summoner_1"
        android:layout_marginLeft="4dp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/iv_item_7"
        android:src="@drawable/sweeping_lens_item"
        android:layout_alignTop="@+id/iv_item_4"
        android:layout_toLeftOf="@+id/iv_item_4"
        android:layout_marginRight="4dp" />
</RelativeLayout>